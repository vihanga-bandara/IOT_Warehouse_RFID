# Azure IoT Hub Device Connection String
# Format: HostName=<your-iothub>.azure-devices.net;DeviceId=<device-id>;SharedAccessKey=<key>
# Get from Azure Portal > IoT Hub > Devices > Select device > Connection string (primary)
IOTHUB_DEVICE_CONNECTION_STRING=HostName=youriothub.azure-devices.net;DeviceId=rpi-scanner-01;SharedAccessKey=YourSharedAccessKeyHere

# Scanner Configuration
# Device ID to identify this scanner in the warehouse
SCANNER_DEVICE_ID=rpi-scanner-01

# Timeout (seconds) waiting for RFID tag per read cycle
READ_TIMEOUT=10

# Delay (seconds) between retry attempts on connection failure
RETRY_DELAY=2
